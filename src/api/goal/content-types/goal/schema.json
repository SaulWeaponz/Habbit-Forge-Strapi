{
  "kind": "collectionType",
  "collectionName": "goals",
  "info": {
    "singularName": "goal",
    "pluralName": "goals",
    "displayName": "Goal"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "completed": {
      "type": "boolean",
      "default": false
    },
    "subgoals": {
      "type": "component",
      "component": "goal.subgoal",
      "repeatable": true
    },
    "notes": {
      "type": "component",
      "component": "goal.note",
      "repeatable": true
    },
    "targetDate": {
      "type": "date"
    },
    "description": {
      "type": "text"
    },
    "accountabilityPartner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "owner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "partner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "habitProgress": {
      "type": "json"
    },
    "progress": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "associatedHabits": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::habit.habit"
    }
  }
}
